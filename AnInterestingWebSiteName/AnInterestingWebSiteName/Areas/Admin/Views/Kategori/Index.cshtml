@model IEnumerable<AnInterestingWebSiteName.Models.Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";


}

<div class="form">
    <div class="baslik">
        Kategori Listesi
        @if (ViewBag.message != null)
        {
            <label>@ViewBag.message</label>
        }
    </div>
    <div>
        <table cellpadding="0" cellspacing="0" class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ID)</th>
                <th>@Html.DisplayNameFor(model => model.UstKategori_ID)</th>
                <th>@Html.DisplayNameFor(model => model.UstKategori)</th>
                <th>@Html.DisplayNameFor(model => model.Ad)</th>
                <th>@Html.DisplayNameFor(model => model.Aciklama)</th>
                <th>Seçenekler</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    @if (item.UstKategori_ID != null)
                    {

                        <td>@item.UstKategori_ID</td>
                        <td>@item.UstKategori.Ad</td>
                    }
                    else
                    {
                        <td>Null</td>
                        <td>Null</td>
                    }
                    <td>@item.Ad</td>
                    <td>
                        @if (item.Aciklama == null || item.Aciklama.Length > 50)
                        {

                            if (item.Aciklama != null)
                            {
                                @item.Aciklama.Substring(0, 50);
                            }
                            <label>...</label>
                        }
                        else
                        {
                            @item.Aciklama
                        }
                    </td>
                    <td style="text-align: center;">
                        <a href="@Url.Action("Edit","Kategori",new {ID = item.ID})">Düzenle</a>
                        &nbsp;&nbsp;|&nbsp;&nbsp;
                        <a href="@Url.Action("Delete","Kategori",new {ID = item.ID})">Sil</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
