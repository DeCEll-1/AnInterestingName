@model IEnumerable<AnInterestingWebSiteName.Models.Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayoutPage.cshtml";

}


<div>
    @if (ViewBag.message != null)
    {
        @ViewBag.message;
    }
</div>



<div class="form">
    <div class="baslik">
        Kategori Listesi
        @if (ViewBag.message !=null)
        {
            <label>@ViewBag.message</label>
        }
    </div>
    <div style="margin-top:1vh;">
        <table cellpadding="0" cellspacing="0" class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ID)</th>
                <th>@Html.DisplayNameFor(model => model.Ad)</th>
                <th>@Html.DisplayNameFor(model => model.Aciklama)</th>
                <th >Seçenekler</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Ad</td>
                    <td>
                        @if (item.Aciklama.Length > 50)
                        {
                            @item.Aciklama.Substring(0, 50);
                            <label>...</label>
                        }
                        else
                        {
                            @item.Aciklama
                        }
                    </td>
                    <td style="text-align: center;">
                        <a href="#">Düzenle</a>
                        &nbsp;&nbsp;|&nbsp;&nbsp;
                        <a href="#">Sil</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
